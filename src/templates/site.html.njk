<!DOCTYPE html>
<html lang="pt-BR" data-theme="auto">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Resumés | Phelipe Teles</title>
    <link href="./styles.css" rel="stylesheet" />
    {{ resumeCssStyles | safe }}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
  </head>

  <body class="bg-gradient-to-br from-base-200 to-base-300 p-4 sm:p-8">
    <div class="max-w-5xl mx-auto">
      <div class="card bg-base-100 shadow-2xl">
        <div class="card-body">
          <div
            class="flex flex-col sm:flex-row justify-between items-center gap-4 mb-4"
          >
            <h1 class="text-2xl font-bold">Phelipe Teles :: Resumés</h1>
            <div class="flex items-center gap-2">
              <select data-language-switcher class="select select-bordered">
                {% for language in languages %}
                  <option
                    value="{{ language.code }}"
                    {% if language.code === defaultLanguage %}selected{% endif %}
                  >
                    {{ language.name }}
                  </option>
                {% endfor %}
              </select>
            </div>
          </div>

          <div class="w-full">
            {% for language in languages %}
              <div
                data-resume-content
                data-language="{{ language.code }}"
                style="display: {{ 'block' if language.code === defaultLanguage else 'none' }};"
              >
                {{ htmlContents[language.code] | safe }}
              </div>
            {% endfor %}

            <div class="mt-4 flex justify-center">
              <a
                data-pdf-button
                class="btn btn-neutral btn-wide"
                href="{{ pdfUrls[defaultLanguage] }}"
                target="_blank"
              >
                Open PDF version
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>

    <script
      data-resume-pdf-pt-br="{{ pdfUrls['pt-BR'] }}"
      data-resume-pdf-en-us="{{ pdfUrls['en-US'] }}"
    >
      const currentScript = document.currentScript;

      const pdfUrls = {
        "pt-BR": currentScript.dataset.resumePdfPtBr,
        "en-US": currentScript.dataset.resumePdfEnUs,
      };

      const languageSwitcher = document.querySelector(
        "[data-language-switcher]",
      );
      const pdfButton = document.querySelector("[data-pdf-button]");
      const htmlContents = document.querySelector("[data-resume-content]");

      const handleLanguageChange = () => {
        const selectedLanguage = languageSwitcher.value;

        for (const htmlContent of htmlContents) {
          htmlContent.style.display =
            htmlContent.dataset.language === selectedLanguage
              ? "block"
              : "none";
        }

        const newPdfUrl = pdfUrls[selectedLanguage];
        pdfButton.href = newPdfUrl;

        document.documentElement.setAttribute("lang", selectedLanguage);
      };

      languageSwitcher.addEventListener("change", handleLanguageChange);
    </script>
  </body>
</html>
